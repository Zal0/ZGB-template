{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ZGB build",
            "type": "shell",
            "command": "${env:ZGB_PATH}/../env/make-3.81-bin/bin/make",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "isBackground": false,
            "args": [
                "BUILD_TYPE=Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Launch emulicious",
            "type": "shell",
            "command": "START",
            "args": [
                "/B",
                "${env:ZGB_PATH}/../env/emulicious/Emulicious.jar"
            ]
        },
        {
            "label": "ZGB run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Launch emulicious",
                "ZGB build"
            ]
        }
    ]
}
